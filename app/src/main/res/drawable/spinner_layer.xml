<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#9075BD" />
                    <padding android:right="12dp" android:left="12dp" />
                </shape>
            </item>
            <!-- Ensure that the drawable for the arrow is not stretched -->
            <item android:drawable="@drawable/ic_arrow_down" android:gravity="end|center_vertical" />
        </layer-list>
    </item>
</selector>
